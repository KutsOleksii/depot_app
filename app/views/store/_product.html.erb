<%= turbo_frame_tag(dom_id(product)) do %>
  <li class='flex mb-6'>
    <%= link_to line_items_path(product_id: product), data: {turbo_method: :post} do %>
      <%= image_tag(product.image_url,
                    class: 'object-contain w-40 h-68 shadow mr-6') %>
    <% end %>
    <div>
      <h2 class="font-bold text-lg mb-3"><%= product.title %></h2>

      <p>
        <%= sanitize(product.description) %>
      </p>

      <div class="mt-3">
        <%= number_to_currency(product.price, precision: rand(3).next ) %>

        <%= button_to 'Add to Cart',
            line_items_path(product_id: product),
            form_class: 'inline',
            class: 'ml-4 ronded-lg py-1 px-2
                    text-white bg-green-600' %>
      </div>
    </div>
  </li>
<% end %>
